#! /bin/sh

prefix="@prefix@"
exec_prefix="@exec_prefix@"
package="@PACKAGE@"
version="@VERSION@"
includedir="@includedir@"
libdir="@libdir@"
largefile="@LARGEFILE_CFLAGS@"

if test $# -eq 0; then
    cat <<EOF
Usage:   $package-config [OPTIONS]
Options:
    --prefix[=DIR]) : \$prefix
    --package) : \$package
    --version) : \$version
    --cflags) : -I\$includedir
    --libs) : -L\$libdir -lzzip -lz
EOF
fi

O=""
for i in "$@" ; do
    case $i in
    --prefix=*) $prefix=`echo $prefix | sed -e 's/--prefix=//'` ;;
    --prefix) O="$O $prefix" ;;
    --package) O="$O $package" ;;
    --version) O="$O $version" ;;
    --cflags)  O="$O $largefile"
	    if test "_$includedir" != "_/usr/include" 
		then O="$O -I$prefix/include" ; fi
	;;
    --libs) O="$O -L$libdir -lzzip -lz"
	;;
    *) O="$O $i" ;;
    esac
done
echo $O
